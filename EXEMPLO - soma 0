programa {
  funcao inicio() {
      inteiro soma, x
      soma = 0 

      escreva("Digite o primeiro numero: \n")
      leia(x)

      enquanto(x != 0) {
        soma = soma + x
        escreva ("Digite outro numero (ou 0 para encerrar): \n")
        leia(x)
      }  

      escreva("A soma total Ã©: ", soma)
  }
}
